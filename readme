function ajaxData(fun, param, callback) //调用Web API

function ajaxData(fun, param, callback) {

	// api.showProgress();
	var userInfo = getUserInfo();
	if (userInfo != '') {
		param.userLoginId = userInfo.userLoginId;
		param.accessToken = userInfo.accessToken;
		api.ajax({
			url : ajaxUrl + fun,
			data : {
				values : param
			},
			cache : false
		}, function(ret, err) {
			api.hideProgress();
			if (ret) {
				
				var status = ret.returnValue['status'];
				if (status == 10001 || status == 10002 || status == 10003 || status == 10009 || status == 10008) {
					api.alert({
						title : '欧神诺在线提示',
						msg : '您的帐号，因为' + ret.returnValue.message + '原因，请您重新登录',
						buttons : ['确定退出']
					}, function(ret, err) {
						if (ret.buttonIndex == 1) {
							logout();
						}
					});
					return;
				} else if (ret.returnValue['status'] == '10010') {
					callback(ret.returnValue, err);
					//请求成功开始缓存图片信息
					return;
				} else {
					if (fun == "ipadCrmValidateCustomerMobile") {
						callback(ret.returnValue, err);
						return;
					} else {
						if (status != 20002) {
							callback(ret.returnValue, err);
							return;
						} else {
							$api.toast('欧神诺在线提示', '您的输入信息有误，请重新检查', 2000);
						}
					}
				}
			} else {
				$api.toast('欧神诺在线提示', '链接网络失败', 2000);
				return;
			}
		});
	}

}